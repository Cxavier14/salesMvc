@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="container">
    <div class="col-md-6">
        <form class="form-group" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-sm-3 col-form-label">Min Date</label>
                    <div class="col-sm-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxDate" class="col-sm-3 control-label">Max Date</label>
                    <div class="col-sm-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="container">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping search</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-sm-3 control-label">Min Date</label>
                    <div class="col-sm-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxDate" class="col-sm-3 control-label">Max Date</label>
                    <div class="col-sm-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>